<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="calc"
            type="com.github.arturnikolaenko.calc.Calculator" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/mainInput"
            style="@style/MainView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:cursorVisible="true"
            android:enabled="false"
            android:text='@{calc.text.replace("*", "\u00D7").replace("/", "\u00F7")}'
            app:layout_constraintBottom_toTopOf="@id/controlsHost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/controlsHost"
            style="@style/Container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainInput">

            <include
                android:id="@+id/functionButtons"
                layout="@layout/functions_layout"
                android:visibility="visible" />

            <include
                android:id="@+id/mainButtons"
                layout="@layout/main_buttons_layout" />

        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>