<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorPrimaryVariant">@color/rich_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mandarin</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="overflowButtonDrawable">@drawable/more_vert</item>
        <!-- Customize your theme here. -->

        <item name="btnTextSize">@dimen/text_size_medium</item>
        <item name="displayTextSize">@dimen/text_size_large</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:itemBackground">?attr/colorPrimary</item>
    </style>

</resources>