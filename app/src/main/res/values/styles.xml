<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textSize">?attr/btnTextSize</item>
    </style>

    <style name="Button.Operator">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Button.Function">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ControlsSwitchButton">
        <item name="android:background">@drawable/slide_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="MainView" parent="Widget.AppCompat.TextView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:editable">false</item>
        <item name="android:textSize">?attr/displayTextSize</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>

</resources>