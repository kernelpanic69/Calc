<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textSize">?attr/btnTextSize</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="android:width">@dimen/button_box</item>
        <item name="android:height">@dimen/button_box</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Operator">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Button.Function">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainView" parent="Widget.AppCompat.TextView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:editable">false</item>
        <item name="android:textSize">?attr/displayTextSize</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Container">
        <item name="android:background">@drawable/button_container</item>
    </style>

</resources>